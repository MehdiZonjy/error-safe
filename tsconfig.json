{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "declaration": true,
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "lib": ["dom", "es7"]
  },
  "include": ["src/**/*"]
}
